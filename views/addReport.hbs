<div class="container-fluid">
    <div class="row justify-content-md-center align-items-center">
        <div class="col col-md-5">
            <div class="reportTitle"><h2 id="addReport">Add Report</h2></div>
            <form action="/report" method="post">
                <div class="form-group">
                    <label for="dateInput">Report date</label>
                    <input type="date" class="form-control" name="reportDate" id="dateInput" aria-describedby="dateHelp"
                           placeholder="Enter report date">
                    <small id="dateHelp" class="form-text text-muted">The date that the report represents</small>
                </div>
                <div class="form-group">
                    <label for="descriptionInput">Description</label>
                    <textarea rows="3"
                              class="form-control"
                              name="reportDescription"
                              id="descriptionInput"
                              placeholder="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-secondary">Add Report</button>
            </form>
        </div>
    </div>
</div>
