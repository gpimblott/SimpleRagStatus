<div class="container-fluid">

    <div class="row justify-content-md-center align-items-center">
        <div class="col col-md-11">
            <div class="reportTitle">Report for {{formatDate report.report_date}}</div>
            <div class="reportDescription">{{report.title}}</div>
        </div>
    </div>

    <div class="row justify-content-md-center align-items-center">
        <div class="col-md-11 ">
            <table id="report_table" class="table table-striped table-hover table-bordered">
                <thead class="thead-light">
                <tr>
                    <th>Project Code</th>
                    <th>Service / Team</th>
                    <th class="rag_status">Schedule</th>
                    <th class="rag_status">Scope</th>
                    <th class="rag_status">Risk</th>
                    <th>Highlights/Lowlights
                    </th>
                </tr>
                </thead>
                <tbody>
                {{#each project_rag}}
                    <tr>
                        <td>{{this.code}}</td>
                        <td>
                            <div class="textOnLeft">
                                <a data-toggle="tooltip" title="View all reports for this project" href="/project/{{this.project_id}}">{{this.project_name}}</a>
                            </div>


                            {{#if ../user.editor}}
                                <div class="iconOnRight">
                                    <a data-toggle="tooltip" title="Edit project status" href="/project/{{this.project_id}}/report/{{../report.id}}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            {{/if}}
                        </td>
                        <td class="rag_status {{this.schedule}}">
                            <div class="textOnLeft">{{this.schedule}}</div>
                            <div class="iconOnRight"><i class="{{directionArrow schedule_direction}}"
                                                                   aria-hidden="true"></i></div>
                        <td class="rag_status {{this.scope}}">
                            <div class="textOnLeft">{{this.scope}}</div>
                            <div class="iconOnRight"><i class="{{directionArrow scope_direction}}"
                                                                   aria-hidden="true"></i></div>
                        <td class="rag_status {{this.risk}}">
                            <div class="textOnLeft">{{this.risk}}</div>
                            <div class="iconOnRight"><i class="{{directionArrow risk_direction}}"
                                                                   aria-hidden="true"></i></div>
                        <td>{{this.description}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
