<div class="container-fluid">
    <div class="row justify-content-md-center align-items-center">
        <div class="col col-md-5">
            <div class="pageTitle">Edit Report</div>
            <form action="/report/{{report.id}}" method="post">
                <input type="hidden" id="reportId" name="reportId" value="{{report.id}}">
                <div class="form-group">
                    <label for="dateInput">Report date</label>
                    <input type="date"
                           class="form-control"
                           name="reportDate"
                           id="dateInput"
                           aria-describedby="dateHelp"
                           value="{{formatLinkDate report.report_date}}" readonly>
                    <small id="dateHelp" class="form-text text-muted">The date that the report represents</small>
                </div>
                <div class="form-group">
                    <label for="descriptionInput">Description</label>
                    <textarea rows="3"
                              class="form-control"
                              name="reportDescription"
                              id="descriptionInput"
                              placeholder="Description">{{report.title}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update report</button>
            </form>
        </div>
    </div>
</div>
