<script src="/js/addMethods.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col col-md-12">
            <nav class="breadcrumb navbar py-0">
                <ul class="breadcrumb mr-auto pb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/project">Projects</a></li>
                    <li class="breadcrumb-item"><a href="/project/{{project.id}}">{{project.name}}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Risks</li>
                </ul>
                <div class="navbar pt-3 pb-0">
                    <ul class="list-inline">
                        {{#if user.admin}}
                            <li class="list-inline-item">
                                <a class="" href="/project/{{project.id}}/risk?action=add">
                                    <i class="fas fa-plus-square"></i> Add new risk
                                </a>
                            </li>
                        {{/if}}
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col text-center"><div class="pageTitle">'{{project.name}}' Risks</div></div>
    </div>


    <div class="row justify-content-md-center align-items-center">
        <div class="col col-md-11">
            <table id="report_table" class="table table-striped table-hover table-bordered">
                <thead class="thead-light">
                <tr>
                    {{#if user.editor}}
                        <th class="dontPrint"></th>
                    {{/if}}
                    <th>Date</th>
                    <th>Likelihood</th>
                    <th>Impact</th>
                    <th>Severity</th>
                    <th>Risk</th>
                    <th>Mitigation</th>
                    <th>State</th>
                </tr>
                </thead>
                <tbody>
                {{#each risks}}
                    <tr>
                        {{#if ../user.editor}}
                            <td class="dontPrint actionButtonColumn">
                                <a data-toggle="tooltip" title="Edit this risk"
                                   href="/risk/{{id}}?action=edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        {{/if}}
                        <td class="dateFixedWidth">{{formatDate this.date_added}}</td>
                        <td class="rag_status {{this.likelihood}}">{{this.likelihood}}</td>
                        <td class="rag_status {{this.impact}}">{{this.impact}}</td>
                        <td class="rag_status {{this.severity}}">{{this.severity}}</td>
                        <td>{{breaklines this.risk}}</td>
                        <td>{{breaklines this.mitigating_action}}</td>

                        {{#if this.is_closed}}
                            <td>Closed</td>
                        {{else}}
                            <td class="Open riskStateColumn">Open</td>{{/if}}

                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>
