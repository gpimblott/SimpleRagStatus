<script src="/js/addMethods.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/project">Projects</a></li>
                    <li class="breadcrumb-item"><a href="/project/{{project.id}}">{{project.name}}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Risks</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-md-center align-items-center dontPrint">
        <div class="col col-md-11">
            <p>
                {{#if user.editor}}
                    <a class="btn btn-outline-secondary btn-sm" href="/project/{{project.id}}/risk?action=add" role="button">
                        <i class="fas fa-plus-square"></i> Add Project Risk
                    </a>
                {{/if}}
            </p>
        </div>
    </div>

    <div class="row justify-content-md-center align-items-center">
        <div class="col col-md-11">
            <table id="report_table" class="table table-striped table-hover table-bordered">
                <thead class="thead-light">
                <tr>
                    {{#if user.editor}}
                        <th class="dontPrint"></th>
                    {{/if}}
                    <th>Date Added</th>
                    <th>Likelihood</th>
                    <th>Impact</th>
                    <th>Severity</th>
                    <th>Risk</th>
                    <th>Mitigation</th>
                    <th>State</th>
                </tr>
                </thead>
                <tbody>
                {{#each risks}}
                    <tr>
                        {{#if ../user.editor}}
                        <td class="dontPrint">

                                <a data-toggle="tooltip" title="Edit this risk"
                                   href="/risk/{{id}}?action=edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                        </td>
                        {{/if}}
                        <td class="dateFixedWidth">{{formatDate this.date_added}}</td>
                        <td class="rag_status {{this.likelihood}}">{{this.likelihood}}</td>
                        <td class="rag_status {{this.impact}}">{{this.impact}}</td>
                        <td class="rag_status {{this.severity}}">{{this.severity}}</td>
                        <td>{{breaklines this.risk}}</td>
                        <td>{{breaklines this.mitigating_action}}</td>

                        {{#if this.is_closed}}<td>Closed</td>
                        {{else}}<td class="Open">Open</td>{{/if}}

                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>
