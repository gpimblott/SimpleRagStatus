<div class="container-fluid">
    <div class="row">
        <div class="col col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/account">Accounts</a></li>
                    <li class="breadcrumb-item"><a href="/account/{{account.id}}">{{account.username}}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Change password</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row justify-content-md-center align-items-center">
        <div class="col col-md-8">
            {{#if message}}
                <h5 class="text-center" style="color:red">{{{message}}}</h5>
            {{/if}}
            <form method="post" action="/account/{{account.id}}/password">
                <div class="form-group">
                    <label for="password1">New password</label>
                    <input type="password" name="password1" class="form-control" id="password1"
                           placeholder="New Password" minlength="8">
                </div>
                <div class="form-group">
                    <label for="password2">Repeat new password</label>
                    <input type="password" name="password2" class="form-control" id="password2"
                           placeholder="New Password" minlength="8">
                </div>
                <button type="submit" class="btn btn-primary">Update password</button>
            </form>
        </div>
    </div>
</div>