<script src="/js/addMethods.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col col-md-12">
            <nav class="breadcrumb navbar py-0">
                <ul class="breadcrumb mr-auto pb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/project">Projects</a></li>
                    <li class="breadcrumb-item"><a href="/project/{{project.id}}">{{project.name}}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Milestones</li>
                </ul>
                <div class="navbar mt-2 mb-0 py-0">
                    <ul class="list-inline">
                        {{#if user.editor}}
                            <li class="list-inline-item">
                                <a class="" href="/project/{{project.id}}/milestone?action=add">
                                    <i class="fas fa-plus-square"></i> Add Milestone
                                </a>
                            </li>
                        {{/if}}
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col text-center"><div class="pageTitle">Milestones</div></div>
    </div>

    <div class="row justify-content-md-center align-items-center">
        <div class="col col-md-11">

            <table id="report_table" class="table table-hover table-bordered">
                <thead class="thead-light">
                <tr>
                    <th></th>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{#each milestones}}
                    <tr>
                        <td class="actionButtonColumn">
                            {{#if ../user.editor}}
                                <a class="" data-toggle="tooltip" title="Edit milestone"
                                   href="/project/{{../project.id}}/milestone/{{this.id}}?action=edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                            {{/if}}
                        </td>
                        <td>{{formatDate this.date}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td class="deleteButtonColumn">
                            <a class="btn btn-outline-danger btn-sm" data-toggle="tooltip" title="Delete Milestone"
                                href="/project/{{../project.id}}/milestone/{{this.id}}"
                                data-method="delete"
                                data-target-url="/project/{{../project.id}}/milestone"
                                data-confirm="Are you sure?" role="button">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
